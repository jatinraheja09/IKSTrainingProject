@model  IEnumerable<MovieApp.Entity.BookingModel>
@{
    ViewData["Title"] = "GetBookings";
}
<br/>
<h1>ALLBookings</h1>
<hr />

<div class="container row p-0 m-0">
    <div class="col-12 border p-3 mt-3">
        <table class="table table-hover table-dark" >
             <thead class="table table-bordered table-striped text-center">
                     <tr class="table-secondary">
                <th>
                    <label asp-for="FirstOrDefault().BookId"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().UserId"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().MovieId"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().TheatreId"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().Date"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().ShowTime"></label>
                </th>
                <th>
                    <label asp-for="FirstOrDefault().Seats"></label>
                </th>
                </tr>
            </thead>
            <tbody class="table table-bordered table-striped">
                @foreach(var item in Model){
                <tr class="table-secondary">
                    <td>@item.BookId</td>
                    <td>@item.UserId</td>
                    <td>@item.MovieId</td>
                    <td>@item.TheatreId</td>
                    <td>@item.Date</td>
                    <td>@item.ShowTime</td>
                    <td>@item.Seats</td>
                </tr>
                }
            </tbody>
                

        </table>
    </div>
</div>